# ------------------------------------------------------------------------------
# SÉCURITÉ
# ------------------------------------------------------------------------------
# Bloquer l'accès aux fichiers sensibles
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# Protéger le fichier .htaccess
<Files .htaccess>
  Order allow,deny
  Deny from all
</Files>

# Bloquer l'affichage des répertoires
Options -Indexes

# Protection contre les injections
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
  RewriteCond %{QUERY_STRING} GLOBALS(=|[|%[0-9A-Z]{0,2}) [OR]
  RewriteCond %{QUERY_STRING} _REQUEST(=|[|%[0-9A-Z]{0,2})
  RewriteRule ^(.*)$ index.html [F,L]
</IfModule>

# ------------------------------------------------------------------------------
# OPTIMISATIONS SUPPLÉMENTAIRES
# ------------------------------------------------------------------------------
# Désactiver les ETags
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# Encodage UTF-8 par défaut
AddDefaultCharset UTF-8

# Type MIME pour les fichiers courants
AddType application/javascript js
AddType text/css css
AddType image/svg+xml svg

# ------------------------------------------------------------------------------
# PAGES D'ERREUR PERSONNALISÉES (optionnel)
# ------------------------------------------------------------------------------
